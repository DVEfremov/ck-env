{
  "auto_detect": "yes", 
  "customize": {
    "check_that_exists": "yes", 
    "ck_version": 10, 
    "env_prefix": "CK_ENV_LIB_PPL", 
    "include_file": "ppl.hh", 
    "limit_recursion_dir_search": {
      "linux": 3
    }, 
    "soft_file": {
      "linux": "libppl.so"
    }, 
    "soft_path_example": {
      "linux": ""
    }
  }, 
  "deps": {
    "lib-gmp": {
      "local": "yes", 
      "name": "GMP library", 
      "sort": 10, 
      "tags": "lib,gmp"
    }, 
    "lib-mpc": {
      "local": "yes", 
      "name": "MPC library", 
      "sort": 30, 
      "tags": "lib,mpc"
    }, 
    "lib-mpfr": {
      "local": "yes", 
      "name": "MPFR library", 
      "sort": 20, 
      "tags": "lib,mpfr"
    }
  }, 
  "soft_name": "PPL library", 
  "tags": [
    "lib", 
    "ppl"
  ]
}
